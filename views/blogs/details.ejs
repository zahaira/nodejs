<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    
    <%- include('../partials/nav.ejs') %>

    <div class="blogs content">
        <h2>all</h2>
          <h3><%= blog.title %></h3>
            <p><%= blog.body %></p>
        <a class="delete" style="color: red;" data-doc="<%=blog.id%>">delete</a>
        
    </div>
    <%- include('../partials/footer.ejs') %>

    <script>
        const x = document.querySelector('a.delete');
        x.addEventListener('click',(e)=>{
            const endpt = `/blogs/${x.dataset.doc}`;
            fetch(endpt,{
                method:'DELETE'
            }).then((response)=>response.json()).then((data)=>window.location.href = data.redirect)
            .catch((err)=>{
                console.log(err);
            })
        })
    </script>
</body>
</html>